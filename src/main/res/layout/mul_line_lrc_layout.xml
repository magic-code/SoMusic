<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.magic.somusic.ui.LrcMulityLineView
        android:id="@+id/mulline_lrcview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <LinearLayout android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="40dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:src="@mipmap/img_artist_default"
            android:id="@+id/mullrc_list"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
        <ImageView android:src="@mipmap/img_appwidget_play_prev"
            android:id="@+id/mullrc_prev"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView android:src="@mipmap/img_appwidget_play"
            android:id="@+id/mullrc_play"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView android:src="@mipmap/img_appwidget_play_next"
            android:id="@+id/mullrc_next"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView android:src="@mipmap/img_button_share_landscape_normal"
            android:layout_weight="1"
            android:id="@+id/mullrc_share"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
